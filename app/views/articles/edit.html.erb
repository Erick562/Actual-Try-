<h2 align="center">Edit Article</h2>


<% if @article.errors.any? %>
<h2 align = "center"> The following errors prevented the article from being created</h2>
<ul align = "center">
<% @article.errors.full_messages.each do |msg| %>
<li><%= msg %> </li>

<% end %>
</ul>
<% end %>

<%=form_for @article do |f| %>
<p>
	<%= f.label :title %>
	<%= f.text_field :title%>
</p>
<p>
	<%= f.label :description %>
	<%= f.text_area :description %>

</p>
<%= f.submit %>
<% end %>

<%= link_to "Go back to articles page", articles_path %>




